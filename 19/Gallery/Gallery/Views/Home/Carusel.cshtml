@model IEnumerable<Gallery.Models.Photo>

<div class="container">

    @for (int number = 0; number < Model.Count(); number++)
    {
        <div class="mySlides">
            <div class="numbertext">"@(number + 1) / @Model.Count()"</div>
            <img src=@Model.ElementAt(number).ImagePath style="width:100%">
        </div>
    }


    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    <div class="caption-container">
        <p id="caption"></p>
    </div>

    <div class="row">
        @for (int number = 0; number < Model.Count() && number<6; number++)
        {
            <div class="column">
                <img class="demo cursor" src=@Model.ElementAt(number).ThumbPath style="width:100%"
                     onclick="currentSlide(number+1)"
                     alt=@Model.ElementAt(number).Description>
            </div>
        }
    </div>

</div>
<script src="~/Scripts/carusel.js"></script>